<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>

<% if @my_entry.errors.any? %>
    <% if flash[:error] %>
        <%= flash[:error] %>
    <% end %>
    <ul>
    <% @my_entry.errors.full_messages.each do |error_msg| %>
        <li><%= error_msg %></li>
    <% end %>    
    </ul>
<%end %>    

<%= form_for [@my_project, @my_entry] do |f| %>
    <%= f.label :hours %>
    <%= f.number_field :hours %> 
    <br>
    <%= f.label :minutes %>
    <%= f.number_field :minutes%>
    <br>
    <%= f.label :date %>
    <%= f.date_field :date %>
    <br>
    <%= f.label :comments %>
    <%= f.text_field :comments %>
    <br>
    <%= f.button %>
    <%= link_to('Cancel', project_time_entries_path) %>
<% end %>

</body>
</html>